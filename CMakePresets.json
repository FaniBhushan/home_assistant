{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "cross-arm64",
            "displayName": "Cross ARM64",
            "description": "Cross compilation for ARM64 Linux",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-arm64",
            "toolchainFile": "${sourceDir}/toolchain/linux-aarch64.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "cross-arm64",
            "configurePreset": "cross-arm64"
        }
    ]
}